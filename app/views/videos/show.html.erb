<h1 class="text-zinc-400 text-3xl"><%= @video.title %></h1>
<%= youtube_thumbnail(@video.youtube_video_id) %>
<% if @video.description.present? %>
  <p class="text-zinc-400 text-center">説明文:</br><%= @video.description %></p>
<% end %>
<div class="p-2 text-zinc-400 text-center">
  紐付けられているタグ:
  <% @video.tag_list.each do |tag| %>
    <%= link_to tag, videos_path(q: { tags_name_cont_any: [tag] }) %>
  <% end %>
</div>
<div class="btn btn-ghost rounded-btn text-zinc-400">
  <%= link_to "戻る", :back %>
</div>
