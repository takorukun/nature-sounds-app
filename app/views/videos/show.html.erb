<h1 class="text-zinc-400 text-4xl"><%= @video.title %></h1>
<%= youtube_thumbnail(@video.youtube_video_id, width: 700, height: 360) %>
<% if @video.description.present? %>
  <p class="text-zinc-400 text-center">説明文:</br><%= @video.description %></p>
<% end %>
<div class="p-2 text-zinc-400 text-center">
  紐付けられているタグ:
  <span class="tag"><%= @video.tag_list %></span>
</div>
<div class="btn btn-ghost rounded-btn text-zinc-400">
  <%= link_to "戻る", profile_videos_path(user_id: @video.user.id) %>
</div>