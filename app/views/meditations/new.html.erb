<%= render "users/shared/bg-image" do %>
  <%= form_with model: @meditation, local: true, html: { style: "width: 260px;" } do |f| %>
    <div class="form-group">
      <%= f.label :duration, "瞑想時間" %>
      <%= f.text_field :duration, class: "form-control w-full", placeholder: "瞑想時間を入力してください：分単位" %>
    </div>

    <div class="form-group">
      <%= f.label :date, "日付" %>
      <%= f.date_field :date, class: "form-control w-full", placeholder: "日付を入力してください" %>
    </div>

    <div class="form-group">
      <%= f.label :notes, "記録" %>
      <%= f.text_area :notes, class: "form-control w-full", rows: "5", placeholder: "瞑想前と比べてどのような変化を感じたかを記録してみましょう。" %>
    </div>

    <%= f.hidden_field :video_id, value: @video.id %>

    <div class="form-group">
      <%= f.submit "記録", class: "btn btn-ghost rounded-btn w-40" %>
    </div>
    <div class="btn btn-ghost rounded-btn w-40">
      <%= link_to "戻る", meditate_meditations_path(video_id: @video.id) %>
    </div>
  <% end %>
<% end %>